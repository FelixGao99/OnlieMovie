@model IEnumerable<OnlineMovieSystem.Models.Movie>

@{
    ViewBag.Title = "Index";
}

<style>

    .movie-poster{
        display: block;
        width: 120px;
        height: 120px;
    }

</style>

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PosterUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CnName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MovieLength)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LikeNum)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img class="movie-poster" src="@item.PosterUrl" alt="Alternate Text" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CnName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EnName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReleaseTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MovieLength)
        </td>
        <td style="width: 300px;">
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LikeNum)
        </td>
        <td style="width: 220px;">
            @Html.ActionLink("编辑", "Edit", new { id=item.ID }, new { @class="btn btn-default" })
            @Html.ActionLink("详情", "Details", new { id=item.ID }, new { @class = "btn btn-default" })
            @Html.ActionLink("删除", "Delete", new { id=item.ID }, new { @class = "btn btn-default" })
        </td>
    </tr>
}

</table>
